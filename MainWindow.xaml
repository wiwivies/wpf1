            <Button Foreground="Green" Content="Green" Height="50" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20" FontSize="18"/>
            <Button Foreground="Lime" Content="Lime" Height="50" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20" FontSize="18"/>
            <Button Foreground="Yellow" Content="Yellow" Height="50" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin=" 20" FontSize="18"/>
            <Button Foreground="Orange" Content="Orange" Height="50" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin=" 20" FontSize="16"/>
            <Button Foreground="Red" Content="Red" Height="50" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin=" 20" FontSize="18"/>
            <Button Foreground="Maroon" Content="Maroon" Height="50" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin=" 20" FontSize="16"/>
