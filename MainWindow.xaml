            <Button Foreground="Silver" Content="Silver" Height="50" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin=" 20" FontSize="18"/>
            <Button Foreground="Gray" Content="Gray" Height="50" Width="60" VerticalAlignment="Top" HorizontalAlignment="Left" Margin=" 20" FontSize="18"/>
